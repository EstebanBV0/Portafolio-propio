@model IEnumerable<Proyecto>

@if(Model is not null){

    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var proyecto in Model)
            {
                <div class="col">
                    <div class="card h-100 contenedores-proye">
                        <img src="@proyecto.ImagenUrl" class="card-img-top imgproyect" alt="imagen-proyecto" />
                        <div class="card-body">
                            <h5 class="card-title">@proyecto.Titulo</h5>
                            <p class="card-text"> @proyecto.Descripcion</p>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary link-acceso" href="@proyecto.Link" target="_blank"
                       rel="noopener noreferrer">Visitar</a>
                        </div>

                    </div>
                </div>

            }
        </div>

    </div>

}


